{
    "compilerOptions": {
        "esModuleInterop": true,
        "noImplicitAny": true,

        "sourceMap": false,
        "allowJs": true,

        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ESNext",

        "baseUrl": "src",
        "outDir": "dist",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*"]
}
